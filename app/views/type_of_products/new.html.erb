<%= content_for :page_title do %>
  Nuevo Tipo de Producto
<% end %>

<%= content_for :index_page_controller do %>
	<%= link_to "Tipos de Productos", type_of_products_path%>
<% end %>

<%= content_for :form_content do %>
	<%= form_with(model: @type_of_product, local: true, class: "form-horizontal") do |form| %>
		<div class="form-body">
			<%= render 'form', form: form, type_of_product: @type_of_product %>
			<div class="form-actions">
        		<div class="row">
            		<div class="col-md-offset-3 col-md-9">
            			<%= yield :action_buttons %>
		            </div>
		        </div>
		    </div>
		</div>
	<% end %>
<% end %>

<%= render template: "layouts/abstracts/new" %>