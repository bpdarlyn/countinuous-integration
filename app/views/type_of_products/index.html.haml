= content_for :page_title do
  Tipos de Productos
= content_for :new_button do
  = link_to new_type_of_product_path, class: "btn sbold green" do
    Nuevo Tipo de Producto
    %i.fa.fa-plus
= content_for :thead do
  %th Nombre
  %th Acciones
= content_for :tbody do
  - @type_of_products.each do |type_of_product|
    %tr
      %td= type_of_product.name
      %td
        .btn-group
          %button.btn.btn-xs.green.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            Acciones
            %i.fa.fa-angle-down
          %ul.dropdown-menu.pull-left{:role => "menu"}
            %li
              = link_to type_of_product do
                %i.icon-docs
                Mostrar Tipo de Producto
            %li
              = link_to edit_type_of_product_path(type_of_product) do
                %i.fa.fa-pencil
                Editar Tipo de Producto
            %li.divider
            %li
              = link_to type_of_product, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.fa.fa-trash-o
                Eliminar Tipo de Producto
= render template: "layouts/abstracts/index"
