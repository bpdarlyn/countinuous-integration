<p id="notice"><%= notice %></p>

<h1>Orden Request Details</h1>

<table>
  <thead>
    <tr>
      <th>Orden request</th>
      <th>Product</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orden_request_details.each do |orden_request_detail| %>
      <tr>
        <td><%= orden_request_detail.orden_request %></td>
        <td><%= orden_request_detail.product %></td>
        <td><%= orden_request_detail.quantity %></td>
        <td><%= link_to 'Show', orden_request_detail %></td>
        <td><%= link_to 'Edit', edit_orden_request_detail_path(orden_request_detail) %></td>
        <td><%= link_to 'Destroy', orden_request_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

