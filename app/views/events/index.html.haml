= content_for :page_title do
  Eventos
= content_for :new_button do
  = link_to new_event_path, class: "btn sbold green" do
    Nuevo Evento
    %i.fa.fa-plus
= content_for :thead do
  %th Nombre
  %th Fecha del Evento
  %th Tipo de Evento
  %th.all Acciones
= content_for :tbody do
  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.event_date
      %td= event.type_of_event.try(:name)
      %td
        .btn-group
          %button.btn.btn-xs.green.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            Acciones
            %i.fa.fa-angle-down
          %ul.dropdown-menu.pull-left{:role => "menu"}
            %li
              = link_to event do
                %i.icon-docs
                Mostrar Evento
            %li
              = link_to edit_event_path(event) do
                %i.fa.fa-pencil
                Editar Evento
            %li.divider
            %li
              = link_to event, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.fa.fa-trash-o
                Eliminar Evento
= render template: "layouts/abstracts/index"
