= content_for :page_title do
  Productos
= content_for :new_button do
  = link_to new_product_path, class: "btn sbold green" do
    Nuevo Producto
    %i.fa.fa-plus
= content_for :thead do
  %th.all Nombre
  %th.min-phone-l Tipo de Producto
  %th.all Acciones
= content_for :tbody do
  - @products.each do |product|
    %tr
      %td= product.name
      %td= product.type_of_product.try(:name)
      %td
        .btn-group.pull-right
          %button.btn.btn-xs.green.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            Acciones
            %i.fa.fa-angle-down
          %ul.dropdown-menu.pull-left{:role => "menu"}
            %li
              = link_to product do
                %i.icon-docs
                Mostrar Producto
            %li
              = link_to edit_product_path(product) do
                %i.fa.fa-pencil
                Editar Producto
            %li.divider
            %li
              = link_to product, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.fa.fa-trash-o
                Eliminar Producto
= render template: "layouts/abstracts/index"
