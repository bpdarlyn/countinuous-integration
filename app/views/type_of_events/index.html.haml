= content_for :page_title do
  Tipos de Eventos
= content_for :new_button do
  = link_to new_type_of_event_path, class: "btn sbold green" do
    Nuevo Tipo de Evento
    %i.fa.fa-plus
= content_for :thead do
  %th.all Nombre
  %th.all Acciones
= content_for :tbody do
  - @type_of_events.each do |type_of_event|
    %tr
      %td= type_of_event.name
      %td
        .btn-group.pull-right
          %button.btn.btn-xs.green.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            Acciones
            %i.fa.fa-angle-down
          %ul.dropdown-menu.pull-left{:role => "menu"}
            %li
              = link_to type_of_event do
                %i.icon-docs
                Mostrar Tipo de Evento
            %li
              = link_to edit_type_of_event_path(type_of_event) do
                %i.fa.fa-pencil
                Editar Tipo de Evento
            %li.divider
            %li
              = link_to type_of_event, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.fa.fa-trash-o
                Eliminar Tipo de Evento
= render template: "layouts/abstracts/index"
